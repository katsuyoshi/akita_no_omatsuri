<% form_tag({ :controller => "locations", :action => "index", :omatsuri => @omatsuri.code, :hikiyama => @hikiyama.code }, :method => :get) do %>
　　<b>開始条件:</b>	<%= text_field_tag "start_at", params[:start_at] %>
　　<b>終了条件:</b>	<%= text_field_tag "end_at", params[:end_at] %>
	<%= submit_tag "検索"%>
<% end %>

<%
    url = "/uprun/viewMap.html?/omatsuri/#{@omatsuri.code}/#{@hikiyama.code}/locations"
    url += "/#{params[:start_at]}/#{params[:end_at]}" if params[:start_at] && params[:end_at]
    url += ".json"
 %>
 
<br />
<%= link_to "map viewerで開く", url, :target => '_blank' %>
 


<br />
<%= render :partial => 'index', :locals => { :locations => @locations, :show_limited => @show_limited, :asending => @asending } %>
