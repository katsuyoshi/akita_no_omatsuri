<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <Folder>
      <name><%= "#{@omatsuri.name}:#{@hikiyama.name} #{params[:start_at]}-#{params[:end_at]}" %></name>
      <% for location in @locations %>
        <Placemark>
          <name><%= location.timestamp %></name>
          <description><%= location.json_attributes[:location] %></description>
          <Point>
            <coordinates><%= "#{location.longitude}, #{location.latitude}" %></coordinates>
          </Point>
        </Placemark>
      <% end %>
    </Folder>
  </Document>
</kml>

  