<h1>お祭り編集</h1>

<% form_for(@omatsuri) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code, 'コード' %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :title, 'タイトル' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :summary, '概要' %><br />
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= f.submit '更新' %>
  </p>
<% end %>

<%= link_to "#{@omatsuri.title}へ", @omatsuri %> |
<%= link_to 'お祭り一覧へ', omatsuris_path %>