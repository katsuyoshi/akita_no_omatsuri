<h1><%=h @omatsuri.name %></h1>
<h2>運行情報追加</h2>

<% form_for([@omatsuri, @track_info]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </p>
  <p>
    <%= f.submit '追加' %>
  </p>
<% end %>

<%= link_to "#{@omatsuri.name}へ", @omatsuri %>